<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/chapterslayot_acitionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加书本"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#fff"
            android:textSize="24sp"/>

        <TextView
            android:layout_gravity="right"
            android:layout_margin="14dp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addbook_complete"
            android:text="完成"/>

    </FrameLayout>
    
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">
        
        <EditText
            android:id="@+id/add_bookname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:textSize="18sp"
            android:gravity="left"
            android:clickable="true"
            android:focusable="true"

            android:hint="点击输入书名"
            />
        <EditText
            android:id="@+id/add_author"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="点击输入作者"
            />
        	
        <EditText
            android:id="@+id/add_publisher"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="点击输入出版社"
            />
        	</LinearLayout>
        	<ImageView
        	    android:id="@+id/scan"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
        	    android:src="@drawable/barcode"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/colorselect_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:orientation="horizontal" >
    </LinearLayout>
    
    	<ImageView 
	    	android:layout_width="fill_parent"
	    	android:layout_height="2dp"
	    	android:background="#eee"/>



    <ExpandableListView 
        android:id="@+id/add_chapexplist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        ></ExpandableListView>
</LinearLayout>
